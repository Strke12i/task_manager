<h2 class="<%= central_text %>">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="relative mt-1 pb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class%>
  </div>

  <div class="relative mt-1 pb-2">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: input_class %>
  </div>

  <div class="relative mt-1 pb-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class: input_class %>
  </div>

  <div class="relative mt-1 pb-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_class%>
  </div>

  <div class="relative mt-3 pb-2">
    <%= f.submit "Sign up" , class: "bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-full shadow-md transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-110"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
