<div id="task-attachments" class="flex flex-wrap">
    <% attachments.each do |attachment| %>
    <div class="p-2 flex justify-between items-center py-2 px-4 rounded-md" id="id-<%=attachment.id%>">
        <p><%= attachment.filename %></p>
        <%= button_to delete_attachment_task_path(@task,attach_id:attachment.id), method: :delete, class:"ml-2 bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 rounded-full focus:outline-none" do %>
        <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
          <path d="M10 8.586L6.707 5.293a1 1 0 1 0-1.414 1.414L8.586 10l-3.293 3.293a1 1 0 1 0 1.414 1.414L10 11.414l3.293 3.293a1 1 0 0 0 1.414-1.414L11.414 10l3.293-3.293a1 1 0 1 0-1.414-1.414L10 8.586z"/>
        </svg>
        <%end %>
    </div>
    <% end %>
</div>