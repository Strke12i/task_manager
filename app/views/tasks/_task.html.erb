<div>
  <h1 class="text-2xl font-bold mb-5"><%= task.name %> - <%= task.finished ? "Finished" : "Open" %></h1>
  <p class="text-gray-700 mb-5"><%= task.description %></p>
  <div class="flex items-center mb-5"> By:
    <% task.assigned_users.each do |user| %>
      <% if task.assigned_users.last != user %>
      <%= user.name + ","%>
        <% else %>
        <%= user.name%>
  <% end %>
    <% end %>
  </div>
  <div class="items-center mb-5"> Attachments:
    <% if task.attachments.attached? %>
      <ul class="list-none">
      <% task.attachments.each do |attachment| %>
          <li class="text-white py-2 px-4 mb-2 rounded-lg"><p><%= link_to attachment.filename, url_for(attachment),class:"text-white font-bold hover:text-purple-300"%></p></li>
      <% end %>
      </ul>
      <%else %>
      <p>None</p>
    <%end %>
  </div>
  <p class="text-green-500 mb-5 text-2xl text-bold">Due Date: <%= task.due_date %></p>

</div>